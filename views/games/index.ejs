<%- include('../partials/header') %>
<%- include('../partials/sidebar') %>
    
    <div class="gamemain">
      <h1><%= title %></h1>
      <h2><a href="/games/new/">Create A Brag</a></h2>
      <% games.forEach(g => { %>
        <li>
            <tr> 
            <td><h2><%= g.game %></h2></td>
            <td><h2><a href="/games/<%= g._id %>"><%= g.title %></a></h2></td>
            <td><p><%= g.content %></p></td>
            <p><%= g.date %></p>
            <% if (g.user.toString() === user._id.toString()) { %>
            <form action="/games/<%= g._id %>?_method=DELETE" method="POST" class="delete-form"><button type="submit">Delete Brag</button></form>
            <% } %>
            </tr>
        </li>
        <% }) %>
    </div>
  </body>
</html>